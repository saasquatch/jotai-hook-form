{
  "version": "1.0.0-7",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "npm run lint && tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint src",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "jotai": ">=1",
    "json-pointer": "^0.6.2",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "jotai-hook-form",
  "author": "SaaSquatch Team",
  "description": "Build complex forms with jotai, using JSON pointers.",
  "module": "dist/jotai-hook-form.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/saasquatch/jotai-hook-form"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/saasquatch/jotai-hook-form/issues"
  },
  "size-limit": [
    {
      "path": "dist/jotai-hook-form.cjs.production.min.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/jotai-hook-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@storybook/react": "^6.5.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/json-pointer": "^1.0.31",
    "@types/react": "^18.0.21",
    "jotai": ">=1",
    "json-pointer": "^0.6.2",
    "react": ">=16",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0"
  }
}
