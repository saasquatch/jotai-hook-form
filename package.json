{
  "version": "1.0.0-1",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "jotai-hook-form",
  "author": "SaaSquatch Team",
  "description": "Build complex forms with jotai, using JSON pointers.",
  "module": "dist/jotai-hook-form.esm.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/saasquatch/jotai-hook-form"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/saasquatch/jotai-hook-form/issues"
  },
  "size-limit": [
    {
      "path": "dist/jotai-hook-form.cjs.production.min.js",
      "limit": "15 KB"
    },
    {
      "path": "dist/jotai-hook-form.esm.js",
      "limit": "10 KB"
    }
  ],
  "dependencies": {
    "@types/react": "^18.0.21",
    "jotai": "^1.8.6",
    "json-pointer": "^0.6.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^8.1.0",
    "@storybook/react": "^6.5.13",
    "@types/json-pointer": "^1.0.31",
    "size-limit": "^8.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.4.0"
  }
}
